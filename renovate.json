{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "prHourlyLimit": 1,
  "packageRules": [
    {
      "matchUpdateTypes": [
        "patch"
      ],
      "groupName": "Patch Updates",
      "groupSlug": "patches",
      "platformAutomerge": true,
      "automerge": true
    }
  ],
  "gomod": {
    "postUpdateOptions": [
      "gomodTidy"
    ],
    "packageRules": [
      {
        "matchUpdateTypes": [
          "minor"
        ],
        "groupName": "Go Minor Updates",
        "groupSlug": "go-minors",
        "platformAutomerge": true,
        "automerge": true
      }
    ]
  }
}